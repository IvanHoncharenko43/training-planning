<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
       
        <StackPanel Grid.Column="0">
            <Label Content="Main" FontSize="40" HorizontalAlignment="Center"/>
            <Button Content="Login" FontSize="20" Width="50" Margin="10"
                    Command="{Binding NavigateToLogin}">
            </Button>
        </StackPanel>
        
        <ContentControl Grid.Column="1" Content="{Binding NavigationService.CurrentView}">
        </ContentControl>
    </Grid>
</Window>
