<UserControl x:Class="WpfApp1.View.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp1.View"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock Text="Registration" FontSize="25" HorizontalAlignment="Center"></TextBlock>
        <StackPanel Margin="40" >
            <TextBlock Text="Enter username:" FontSize="17" Width="125"></TextBlock>
            <TextBox Width="125" FontSize="13" Margin="2"></TextBox>
            <TextBlock Text="Enter password:" FontSize="17" Width="125"></TextBlock>
            <PasswordBox Width="125" FontSize="13" Margin="2"></PasswordBox>
            <Button Content="Register" Width="50" Margin="7"/>
            
            <Button Content="Already have an account?" Width="140"
                    Background="Transparent" BorderBrush="Transparent"
                    Foreground="CornflowerBlue"
                    Command="{Binding NavigateToLogin}">
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
